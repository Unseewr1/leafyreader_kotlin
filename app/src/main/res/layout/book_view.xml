<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="8dp"
    app:cardBackgroundColor="#1B3238"
    app:cardCornerRadius="6dp">

    <ImageView
        android:id="@+id/bookPreviewView"
        android:layout_width="105dp"
        android:layout_height="148dp"
        android:layout_margin="8dp"
        android:background="#446391" />

    <TextView
        android:id="@+id/bookNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/bookPreviewView"
        android:text="Java 8 In Action"
        android:textColor="#EDFDFC"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bookAuthorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookNameView"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="10dp"
        android:text="Raoul-Gabriel Urma"
        android:textColor="#A1B3B5" />

    <!-- Additional TextView for "PDF" string -->
    <TextView
        android:id="@+id/bookExtensionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookAuthorView"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="70dp"
        android:text="PDF"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bookSizeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookAuthorView"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="70dp"
        android:text="1MB"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/bookPreviewView"
        android:layout_marginTop="10dp" />

</androidx.cardview.widget.CardView>
